{% extends 'base.html.twig' %}

{% block title %}{{parent()}}- mis peliculas{% endblock %}

{% block body %}
    {{parent()}}
    <br>
    <div class="container">
        <a class="btn btn-danger" href="{{ path('dashboard') }}">Regresar</a>
        <div class="row">
            <div class="col-md-8">
                {% for post in posts %}
                    <div class="bg-white rounded p-3 my-3" onclick="window.location.href='{{ path('VerPeliculas',{id:post.id}) }}'" style="cursor: pointer">
                        <div class="d-flex bd-highlight">
                            <div class="p-2 flex-grow-1 bd-highlight">
                        <h3>{{ post.titulo }}</h3>
                        <div class="my-3 bg-yellow"> <i class="fa fa-user"></i><strong> Creado por {{post.user.nombre}}</strong></div>
                        <div class=" bg-green"><i class="far fa-clock"></i> <strong>Fecha de publicaci√≥n: {{ post.fechapublicacion | date }}</strong></div>
                        <div class="p-2 bd-highlight">
                            <div class="align-self-center">
                                <img class="rounded" src="{{ asset('uploads/photos/'~post.foto) }}" width="150px">
                            </div>
                        </div>
                    </div>
                        </div>
                    </div>
                    </div>

                {% endfor %}
            </div>
            <div class="col-md-4"></div>
       <center> <h1> <a class="nav-link" >No mas  Publicaciones</a></h1> </center>
        </div>
    </div>
{% endblock %}